
<section class="bg-gray-50 p-4  shadow-lg border grid-cols-3 grid text-gray-700 gap-x-10 gap-y-4">
    <h2 class="col-span-3 text-center text-2xl">Buscar Produto</h2>
    <div>
        <label for="">Produto</label>
        <input type="text" class="px-4 py-2 border w-full" name="estoque">
    </div>
    <div>
        <label for="">Código de Barras</label>
        <input type="text" class="px-4 py-2 border w-full" name="estoque">
    </div>
    <div>
        <label for="">Referência</label>
        <input type="text" class="px-4 py-2 border w-full" name="estoque">
    </div>
    <div class="col-span-3 ">
        <button class="ml-auto block bg-blue-500 text-white px-4 py-2 hover:bg-blue-600">Buscar</button>
    </div>
</section><br>



<section class="space-y-2 relative p-4 bg-gray-50  border shadow-lg">

    <table class="border w-full">
        <caption class="mb-2">
            Produtos cadastrados
        </caption>
        <thead class="border text-left bg-gray-200 ">
            <tr >
                <th class="p-2">Id</th>
                <th class="p-2">Nome</th>
                <th class="p-2">Status</th>
                <th class="p-2">Modelo</th>
                <th class="p-2">Categoria</th>
                <th class="p-2">Marca</th>
                <th class="p-2">Editar</th>
            </tr>
        </thead>
        <tbody class="text-left">

            <% const apenasProdutos = produtos.filter((item, index, self) => {
                return index === self.findIndex((t) => (
                    t.produto_id === item.produto_id
                ));
            })%>

            <% apenasProdutos.forEach(e => { %>             
                <tr class="border hover:bg-gray-100">
                    <th class="p-2 border"><%= e.produto_id %></th>
                    <td class="p-2 border"><%= e.nome_produto %></td>
                    <td class="p-2 border"><%= e.status_produto == 1 ? 'Ativo' : 'Inativo'%></td>
                    <td class="p-2 border"><%= e.modelo_produto %> z</td>
                    <td class="p-2 border"><%= e.categoria %></td>
                    <td class="p-2 border"><%= e.marca %></td>
                    <td class="p-2 border">
                        <a href="/admin/edicao/produto/<%= e.produto_id %>" class="w-24 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white flex items-center space-x-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                                <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.5.5 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11z"/>
                            </svg>
                            <p>Editar</p>
                        </a>
                    </td>
                </tr>
            <% }) %>
            
        </tbody>
    </table>

</section>

<script src="/js/admin/edicaoProduto.js"></script>