<section class="p-5">
    <h2 class=" text-2xl font-bold">NOME DO PRODUTO AQUI</h2>

    <div class="p-2">
        <span class="line-through text-xl text-gray-700 font-semibold">R$15,99</span>
        <span class="text-3xl text-gray-950 font-semibold ">R$10,99</span>
    </div>
    <div class="p-2 text-gray-700 ">
        <div>
            <i class="bi bi-credit-card-2-front mr-1"></i>
            <span class="font-semibold ">3x de R$3,66 sem juros</span>
        </div>
        <div>
            <i class="bi bi-cash"></i>
            <span class="font-semibold ">2% de desconto Pagando comn Pix</span>
        </div>
    </div>

    <!-- variantes -->
    <div class="p-2 space-y-2">
        <div>
            <label for="" class="text-sm text-gray-600">Tamanho</label>
            <select name="" id="" class="px-4 py-2 w-full border border-gray-500">
                <option value="" selected disabled>SELECIONE UM TAMANHO</option>
                <option value="">TAMANHO X</option>
                <option value="">TAMANHO Y</option>
                <option value="">TAMANHO Z</option>
            </select>
        </div>
        <div>
            <label for="" class="text-sm text-gray-600">Quantidade</label><br>

            <div class="border w-28 rounded-lg border-gray-700 flex items-center justify-around">
                <button onclick="mais()" ontouchstart="mais()" class="text-3xl w-10 h-10  flex items-center justify-center"><i class="bi bi-plus-circle-fill leading-3"></i></button>
                <input id="quantidade" type="number" value="1" class="border-b text-center text-xl w-10 focus:outline-none">
                <button onclick="menos()" ontouchstart="menos()" class="text-3xl w-10 h-10  flex items-center justify-center"><i class="bi bi-dash-circle leading-3"></i></button>
            </div>
        </div>
    </div>
    <button class="w-full bg-black px-4 py-2 font-bold text-white my-2">COMPRAR</button>
</section>

<script>
    function mais(){
        let quantidade = parseInt(document.getElementById('quantidade').value);
        quantidade += 1;
        document.getElementById('quantidade').value = quantidade;
    }
    function menos(){
        let quantidade = parseInt(document.getElementById('quantidade').value);
        if (quantidade > 1) {
            quantidade -= 1;
            document.getElementById('quantidade').value = quantidade;
        }
    }
</script>