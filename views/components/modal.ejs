<div id="shadowModal" class="hidden w-full h-full bg-gray-600 opacity-80 fixed z-40 top-0 left-0 ">
</div>

<div id="modalContainer" class=" hidden w-screen h-screen border fixed z-50 top-0 lef-0 duration-200">

    <div id="modal"  class="bg-white duration-300 px-10 py-5 opacity-100  absolute top-1/2 left-1/2 transform -translate-x-1/2 translate-y-full rounded-lg w-[85%] max-w-[350px]">
        <button onclick="fecharModal()" class="absolute top-1 right-2 ">
            <i class="bi bi-x-circle  text-4xl text-red-700"></i>
        </button>   
        <br>
        <h2 class="text">Adicionar Produto ao carrinho ?</h2>
        <hr><br>

        <div class="flex space-x-2">
            <img 
                src="https://cdn.dooca.store/8573/products/7jvnqrpmxuwanlfv18hk4c4sqeuflrq7p1nx_640x640+fill_ffffff.jpg?v=1664978573&webp=0" 
                alt=""
                class="w-20 aspect-square border shadow-md rounded-lg overflow-hidden object-cover"
            >
            <h2>Nome do produto aqui</h2>
        </div>

        <div class="flex flex-col items-end  ">
            <div>

                <label for="" class="text-sm text-gray-600">Quantidade</label><br>
                <div class="border w-28 rounded-lg border-gray-700 flex items-center justify-around">
                    <button onclick="maisModal()" ontouchstart="mais()" class="text-3xl w-10 h-10  flex items-center justify-center"><i class="bi bi-plus-circle-fill leading-3"></i></button>
                    <input id="quantidade" type="number" value="1" class="border-b text-center text-xl w-10 focus:outline-none">
                    <button onclick="menosModal()" ontouchstart="menos()" class="text-3xl w-10 h-10  flex items-center justify-center"><i class="bi bi-dash-circle leading-3"></i></button>
                </div>
            </div>
        </div>

        <button class="bg-blue-400 px-4 py-2 w-full mt-2 text-white hover:bg-blue-500">ADICIONAR</button>
    </div>
</div>

<script>
    function fecharModal(){
        const modal = document.getElementById('modal')
        const modalContainer = document.getElementById('modalContainer')
        const shadowModal = document.getElementById('shadowModal')
      
 
        modal.classList.replace('-translate-y-1/2', 'translate-y-full')

        setTimeout(() => {
            modal.classList.add('hidden')
            modalContainer.classList.add('hidden')
            shadowModal.classList.add('hidden')
        }, 200);
            
        
    }

    function abrirModal(){
        const modal = document.getElementById('modal')
        const modalContainer = document.getElementById('modalContainer')
        const shadowModal = document.getElementById('shadowModal')
      
        modalContainer.classList.remove('hidden')
        shadowModal.classList.remove('hidden')
        modal.classList.remove('hidden')
 
        
        setTimeout(() => {
            modal.classList.replace('translate-y-full', '-translate-y-1/2')
        }, 10);
    }

    function maisModal(){
        let quantidade = parseInt(document.getElementById('quantidade').value);
        quantidade += 1;
        document.getElementById('quantidade').value = quantidade;
    }
    function menosModal(){
        let quantidade = parseInt(document.getElementById('quantidade').value);
        if (quantidade > 1) {
            quantidade -= 1;
            document.getElementById('quantidade').value = quantidade;
        }
    }
</script>