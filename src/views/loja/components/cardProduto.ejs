<% function tratarNome(nome) {
    return nome.toLowerCase().replace(/[^a-z0-9 ]/g, '').replace(/\s+/g, '-');
}%>

<div class="border w-44 md:w-56 md:h-96 h-80 rounded-2xl overflow-hidden text-gray-700 flex-none snap-center  ">
    <a href="/produto/<%= tratarNome(data.nome)  %>">
        <img 
        <% console.log(data.estoque) %>
            src="<%= typeof data.imagem !== 'undefined' && data.imagem ? '/img/' + data.imagem : '' %>" 
            alt="imagem do produto"
            onerror="this.src='/assets/produto-default.png'"
            class="w-full aspect-square object-cover border-b"
        >
    </a>
    <div class="md:p-4 p-1 flex flex-col items-center justify-around">
        <h2 class="h-[50px] overflow-hidden text-sm"><%= data.nome ?? '' %></h2>
        <h2 class="text-2xl text-gray-700 font-semibold text-center">R$ <%= typeof data.preco != 'undefine' && data.preco ? String(data.preco).replace('.', ',') : ''  %></h2>
        <div class="text-sm font-semibold font-white py-2 flex items-center justify-around w-full space-x-4 z-30">
            <a href="/produto/<%= tratarNome(data.nome) %>" class="bg-blue-400 md:px-5 px-3 py-2 rounded-full text-xs md:text-sm text-white  h-10 flex items-center justify-center">
                VER PRODUTO
            </a>
            <% 
                let itemParametro = data;
                delete itemParametro.descricao;
                delete itemParametro.ativo;
                delete itemParametro.produto;
                delete itemParametro.marca;
                delete itemParametro.referencia;
                delete itemParametro.vendas;
                delete itemParametro.ean;
                delete itemParametro.custo;
            %>
            <button
                onclick="carregarItemModal('<%= JSON.stringify(itemParametro) %>'), abrirModal()"
                class="bg-white hover:bg-blue-400 border border-blue-400 hover:border-none p-2 rounded-full h-10 w-10 text-blue-400 hover:text-white leading-3 text-xl"
            >
                <i class="bi bi-cart-plus"></i>
            </button>
        </div>
    </div>
</div>
