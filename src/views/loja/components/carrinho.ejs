<section id="carrinho" class="hidden fixed top-0 shadow-xl shadow-black  left-[-100%] h-screen w-[90%] z-50 duration-300  bg-white flex-col justify-between max-w-96 ">
    <div class="text-right text-gray-700 text-xl flex flex-col">
        <!-- BTN FECHAR -->

        <button id="btnFecharCarrinho" class="border-b p-2 pl-4 pr-5 w-full text-right flex items-center justify-between" >
            <img src="/assets/logo.png" alt="logo" class="h-10" >
            <i class="bi bi-x  text-4xl text-gray-700"></i>
        </button>

        <!-- TITULO -->
        <h2 class="w-full p-4 text-2xl text-center">MEU CARRINHO</h2>

        <!-- LISTA DE PRODUTOS NO CARRINHO -->
        <ul id="listaProdutosCarrinho" class="overflow-y-auto h-screen  max-h-[calc(100vh-339px)] space-y-2 duration-300">
            <li class="py-2 px-4 border border-c1 rounded-full text-c1 flex items-center justify-between space-x-2 w-[80%] m-auto ">
                <i class="bi bi-exclamation-circle leading-3"></i>
                <p class="text-sm">O carrinho de compras esta vazio</p>
            </li>
        </ul>
    </div>

    <div class="border" id="contaionerFinalizarCarrinho">
        <div>
            <!-- SUBTOTAL -->
            <div class="flex justify-between items-center font-semibold">
                <h2 class="p-4 text-xl " >Subtotal: </h2>
                <h2 class="p-4 text-xl text-black" id="subtotal">R$0,00</h2>
            </div>

            <!-- BTN FINALIZAR COMPRA -->
            <button id="btnFinalizarCompra"  class="bg-c1  px-4 py-2 w-full font-semibold text-white my-2">FINALIZAR COMPRA</button>
        </div>
    </div>
</section>

