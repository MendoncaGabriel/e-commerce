</head>
<style>
    #listaProdutosCarrinho {
        max-height: calc(100vh - 339px);
        overflow-y: auto; 
    }
    .progress-bar {
        --progress: 100;
        height: 25px;
        border-radius: 25px;
        background-color: #dfdfdf;
        display: flex;
    }
    .progress-bar::before {
        border-radius: 25px;
        content: "";

        width: calc(var(--progress) * 1%);
        background-color: hsl(calc(var(--progress) * 1.2), 80%, 50%);
        transition: all 1s linear;
    }
</style>
<body class="bg-gray-100" style="background-image: url('/assets/fundo.png'); background-size: 100%;">

    <!-- FORMULARIOS -->
    <section id="carrinho" class=" m-auto w-[90%] z-50 duration-300 flex flex-col justify-between max-w-screen-md space-y-4 pt-5 ">
        <%- include('./components/checkout/listaProdutos') %>
        <%- include('./components/checkout/formEndereco') %>
        <%- include('./components/checkout/formEntrega') %>
        <%- include('./components/checkout/formPagamento') %>
    </section>

    <%- include('./components/checkout/popuPagamento.ejs') %>

</body>
</html>

