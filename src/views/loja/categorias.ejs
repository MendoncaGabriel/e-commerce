<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= titulo ?? '' %></title>
    <!-- BOOTSTRAP ICONS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <!-- TAILWINDCSS -->
    <link rel="stylesheet" href="/css/output.css">
    <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
</head>

<body class="max-w-screen-md md:max-w-none m-auto relative">
    <%- include('components/aviso', {aviso: "VENDAS SOMENTE PARA REGIÃƒO NORTE"}) %>
    <%- include('components/navbar') %>
    <%- include('components/modal') %>
    <%- include('components/menu') %>
    <%- include('components/carrinho') %>
    <%- include('components/categorias', {data: categorias}) %>
    
    <div class="max-w-screen-2xl m-auto">
        <h2 class="p-4 font-bold text-lg text-center "><%= titulo.toUpperCase().replace(/-/g, ' ' ) ?? '' %></h2>
        <hr>
    </div>
    <section class="max-w-screen-2xl m-auto grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 justify-center items-center  gap-2 p-2 ">
        <% for( let i = 0; i < produtosCategoria.length; i++ ) { %>
            <!-- PRODUTO CARD -->
            <div class="m-auto">
                <%- include('./components/cardProduto', { data: produtosCategoria[i] }) %>
            </div>
        <% } %>
    </section>
</body>
</html>

<script src="/js/utilities/cookie.js"></script>
