<form id="formCreateProduto" class="text-gray-600 md:grid md:grid-cols-2 md:gap-5 md:max-w-screen-lg m-auto">
    <!-- Imagem do produto -->
    <div class="flex flex-col  items-center row-span-5">
        <label for="imagem">Imagem:</label>
        <input type="file" id="imagem" name="imagem" class="input-file hidden" onchange="loadFile(event)">
        <img src="/assets/produto-default.png" alt="imagem do produto" class="w-96 aspect-square object-cover" id="imagem-preview">
        <button type="button" onclick="document.getElementById('imagem').click()" class="mt-2 bg-blue-500 text-white px-4 py-2 rounded">Selecionar Imagem</button>
    </div>

    <!-- Formulario de cadastro de produtos -->
    <%- include('../component/input', {label: "Nome:", name:"nome"}) %>

    <!-- Categorias -->
    <div class="flex flex-col">
        <label for="modelo">Categorias</label>
        <select required name="categoria" class="px-4 py-2">
            <option selected disabled>Selecione uma categoria</option>
            
            <% if (typeof categorias != "undefined" && categorias?.length > 0) { %>
                <% categorias.forEach(element => { %>
                    <option value="<%= element.categoria_id %>"><%= element.nome_categoria %></option>
                <% }) %>
            <% } %>
        </select>
    </div>
    
    <%- include('../component/input', {label: "Preco:", name:"preco", type: "number", placeholder: "R$10,99", required: true}) %>
    <%- include('../component/input', {label: "Custo:", name:"custo", type: "number", placeholder: "R$10,99" }) %>
    <%- include('../component/input', {label: "Tamanho:", name:"tamanho", placeholder: '10cm ou 3,93"'}) %>
    <%- include('../component/input', {label: "Marca:", name:"marca"}) %>
    <%- include('../component/input', {label: "Quantidade:", name:"quantidade", placeholder: "Quantidade no pacote, caixa etc..."}) %>
    <%- include('../component/input', {label: "Modelo:", name:"modelo"}) %>
    <%- include('../component/input', {label: "Referência:", name:"referencia"}) %>
    <%- include('../component/input', {label: "Código de Barras:", name:"ean", placeholder: "1234567891011", mascara: "ean13"}) %>
    <%- include('../component/input', {label: "Estoque:", name:"estoque", type: "number", required: true}) %>
    
    <div class="flex flex-col md:col-span-2 row-span-2 w-full">
        <label for="descricao">Descrição:</label>
        <textarea name="descricao" id="descricao" class="px-4 py-2 min-h-40 max-h-96"></textarea>
    </div>
    
    <button type="submit" class="bg-blue-600 hover:bg-blue-500 hover:drop-shadow-lg hover:scale-105 duration-200 px-4 py-2 rounded-md text-white font-semibold col-span-2 max-w-52 ml-auto flex items-center space-x-2">
        <span>CADASTRAR</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy2-fill" viewBox="0 0 16 16">
            <path d="M12 2h-2v3h2z"/>
            <path d="M1.5 0A1.5 1.5 0 0 0 0 1.5v13A1.5 1.5 0 0 0 1.5 16h13a1.5 1.5 0 0 0 1.5-1.5V2.914a1.5 1.5 0 0 0-.44-1.06L14.147.439A1.5 1.5 0 0 0 13.086 0zM4 6a1 1 0 0 1-1-1V1h10v4a1 1 0 0 1-1 1zM3 9h10a1 1 0 0 1 1 1v5H2v-5a1 1 0 0 1 1-1"/>
        </svg>
    </button>
</form>

<script src="/js/admin/cadastroProduto.js"></script>