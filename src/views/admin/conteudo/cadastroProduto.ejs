<section class="space-y-2 relative p-4">

    <!-- PRODUTO -->
    <section class="p-4">
        <h2 class="col-span-2 text-gray-700 font-semibold text-2xl text-center p-4 ">Produto</h2>
        <hr><br>
        <div class="grid grid-cols-2   gap-4   border shadow-lg p-5 bg-gray-50">
            <div class=" text-gray-700 space-y-5">
                <div>
                    <label for="">Nome <span class="text-red-600">*</span></label><br>
                    <input type="text"  class="px-4 py-2 border w-full" name="nome">
                </div>
                
                <div>
                    <label for="">Modelo </label><br>
                    <input type="text"  class="px-4 py-2 border w-full" name="modelo">
                </div>
                
                <div>
                    <label for="">Marca</label><br>
                    <input type="text"  class="px-4 py-2 border w-full" name="marca">
                </div>
                
                <div>
                    <label for="">Categoria</label><br>
                    <select name="categoria" id="" class="px-4 py-2 border w-full">
                        <option value="" selected disabled>Selecione uma categoria</option>


                        <!-- Categorias -->
                        <% categorias.forEach(element => { %>
                         <option value="<%= element.nome %>"><%= element.nome %></option>
                        <% }) %>
                        
                    </select>
                </div>
            </div>
            <div>
                <label for="descricao" class="text-gray-700">Descrição</label><br>
                <textarea  name="descricao" cols="30"   class=" border w-full p-5 max-h-[300px] min-h-[300px]" placeholder=""  rows="11" ></textarea>
            </div>
        </div>
    </section>


    <!-- VARIANTES -->
    <section>
        <h2 class="col-span-2 text-gray-700 font-semibold text-2xl text-center p-4" id="tituloVariante">Variantes</h2>
        <hr class="mb-2">
        <div  id="variantes" class="overflow-y-auto space-y-2 p-4"></div>  
    </section>


    <!-- Controle -->
    <section class="fixed bottom-10 right-10 ">
        
        <button class="bg-green-600 hover:bg-green-500 shadow-lg px-4 py-2  flex items-center space-x-2 text-white  col-span-2 " onclick="Variante.adicionar()">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
                <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0"/>
            </svg>
            <p>
                ADICIONAR VARIANTE
            </p>
        </button>

        <button id="btnCadastrar" onclick="Cadastro.salvar()" class="bg-blue-600 hover:bg-blue-500 shadow-lg flex items-center space-x-2  px-4 py-2 text-white   col-span-2 my-5  ml-auto">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-floppy2-fill" viewBox="0 0 16 16">
                <path d="M12 2h-2v3h2z"/>
                <path d="M1.5 0A1.5 1.5 0 0 0 0 1.5v13A1.5 1.5 0 0 0 1.5 16h13a1.5 1.5 0 0 0 1.5-1.5V2.914a1.5 1.5 0 0 0-.44-1.06L14.147.439A1.5 1.5 0 0 0 13.086 0zM4 6a1 1 0 0 1-1-1V1h10v4a1 1 0 0 1-1 1zM3 9h10a1 1 0 0 1 1 1v5H2v-5a1 1 0 0 1 1-1"/>
              </svg>
              <p>
                  CADASTRAR
              </p>
        </button>
    </section>

</section>

<script src="/js/admin/cadastroProduto.js"></script>

