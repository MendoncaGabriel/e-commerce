<form id="formUpdateProduto" class="text-gray-600 md:grid md:grid-cols-2 md:gap-5 md:max-w-screen-lg m-auto">
    <!-- ID DO PRODUTO -->
    <input type="text" name="id" value="<%= produto.produto_id %>" class="hidden">

    <div class="flex flex-col items-center row-span-5">
        <label for="imagem">Imagem:</label>
        <input type="file" id="imagem" name="imagem" class="input-file hidden" onchange="loadFile(event)">
        <img src="/img/<%= produto.imagem %>" onerror="this.onerror=null; this.src='/assets/produto-default.png';" alt="imagem do produto" class="w-96 aspect-square object-cover" id="imagem-preview">
        <button type="button" onclick="document.getElementById('imagem').click()" class="mt-2 bg-blue-500 text-white px-4 py-2 rounded">Selecionar Imagem</button>
    </div>
    <div class="flex flex-col">
        <label for="nome">Nome:</label>
        <input value="<%= produto.nome %>" type="text" id="nome" name="nome" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="modelo">Modelo:</label>
        <input value="<%= produto.modelo %>" type="text" id="modelo" name="modelo" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="marca">Marca:</label>
        <input value="<%= produto.marca %>" type="text" id="marca" name="marca" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="categoria">Categoria:</label>
        <input value="<%= produto.categoria %>" type="text" id="categoria" name="categoria" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="preco">Preço:</label>
        <input value="<%= produto.preco %>" type="text" id="preco" name="preco" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="tamanho">Tamanho:</label>
        <input value="<%= produto.tamanho %>" type="text" id="tamanho" name="tamanho" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="quantidade">Quantidade:</label>
        <input value="<%= produto.quantidade %>" type="text" id="quantidade" name="quantidade" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="referencia">Referência:</label>
        <input value="<%= produto.referencia %>" type="text" id="referencia" name="referencia" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="ean">Código de Barras:</label>
        <input value="<%= produto.ean %>" type="text" id="ean" name="ean" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="estoque">Estoque:</label>
        <input value="<%= produto.estoque %>" type="text" id="estoque" name="estoque" class="px-4 py-2">
    </div>
    <div class="flex flex-col">
        <label for="custo">Custo:</label>
        <input value="<%= produto.custo %>" type="text" id="custo" name="custo" class="px-4 py-2">
    </div>
    <div class="flex flex-col md:col-span-2 row-span-2">
        <label for="descricao">Descrição:</label>
        <textarea value="<%= produto.descricao %>" name="descricao" id="descricao" class="px-4 py-2 min-h-40 max-h-96"><%= produto.marca %>"</textarea>
    </div>

    <button type="submit" class="bg-blue-600 hover:bg-blue-500 hover:drop-shadow-lg hover:scale-105 duration-200 px-4 py-2 rounded-md text-white font-semibold col-span-2 max-w-52 ml-auto flex items-center space-x-2">
        <span>ATUALIZAR</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-floppy2-fill" viewBox="0 0 16 16">
            <path d="M12 2h-2v3h2z"/>
            <path d="M1.5 0A1.5 1.5 0 0 0 0 1.5v13A1.5 1.5 0 0 0 1.5 16h13a1.5 1.5 0 0 0 1.5-1.5V2.914a1.5 1.5 0 0 0-.44-1.06L14.147.439A1.5 1.5 0 0 0 13.086 0zM4 6a1 1 0 0 1-1-1V1h10v4a1 1 0 0 1-1 1zM3 9h10a1 1 0 0 1 1 1v5H2v-5a1 1 0 0 1 1-1"/>
        </svg>
    </button>
</form>
<script src="/js/admin/edicaoProduto.js"></script>



