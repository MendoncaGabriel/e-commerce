
<section class="space-y-2 relative p-4">

    <!-- PRODUTO -->
    <section class="p-4">
        <h2 class="col-span-2 text-gray-700 font-semibold text-2xl text-center p-4 ">Produto</h2>
        <hr><br>
        <div class="grid grid-cols-2   gap-4   border shadow-lg p-5 bg-gray-50">
            <div class=" text-gray-700 space-y-5">
                <div class="flex items-center mb-4">
                    <input name="ativo"  <%= produto[0].ativo ? 'checked' : '' %> id="default-checkbox" type="checkbox" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                    <label for="default-checkbox" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Produto Ativo</label>
                </div>
                <div>
                    <label for="">Nome <span class="text-red-600">*</span></label><br>
                    <input type="text"  class="px-4 py-2 border w-full" name="nome" value="<%= produto[0].nome ?? '' %>">
                </div>
                <div>
                    <label for="">Modelo </label><br>
                    <input type="text"  class="px-4 py-2 border w-full" name="modelo" value="<%= produto[0].modelo ?? '' %>">
                </div>
                <div>
                    <label for="">Marca</label><br>
                    <input type="text"  class="px-4 py-2 border w-full" name="marca" value="<%= produto[0].marca ?? '' %>">
                </div>
                <div>
                    <label for="">Categoria</label><br>
                    <select name="categoria" id="" class="px-4 py-2 border w-full">
                        <option value="" selected disabled>Selecione uma categoria</option>
                        <% if (produto[0].categoria) { %>
                            <option value="" selected><%= produto[0].categoria  %></option>
                        <% } %>

                        <!-- Categorias -->
                        <% categorias.forEach(element => { %>
                            <option value="<%= element.nome %>"><%= element.nome %></option>
                        <% }) %>
                        
                    </select>
                </div>
            </div>
            <div>
                <label for="descricao" class="text-gray-700">Descrição</label><br>
                <textarea  name="descricao" cols="30"   class=" border w-full p-5 max-h-[300px] min-h-[300px]" placeholder=""  rows="11" value="<%= produto[0].descricao ?? '' %>"  ><%= produto[0].descricao ?? '' %></textarea>
            </div>
        </div>
    </section>


    <!-- VARIANTES -->
    <section>
        <h2 class="col-span-2 text-gray-700 font-semibold text-2xl text-center p-4" id="tituloVariante">Variantes</h2>
        <hr class="mb-2">

        <div  id="variantes" class="overflow-y-auto space-y-2 p-4">
            <% variantes.forEach(e => { %>
                <div name="variante" class="col-span-2  border shadow-lg p-5 bg-gray-50 "  >
                    <button onclick="Variante.remover(this, '<%= e.variante_id %>')" class="bg-red-500 ml-auto text-white px-4 py-2 w-32 flex items-center justify-center space-x-2 ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-trash3-fill" viewBox="0 0 16 16">
                            <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5"/>
                        </svg>
                        <p>Remover</p>
                    </button>
        
                    <!-- formulario variantes -->
                    <div class="grid grid-cols-2  w-full col-span-2">
                        <div class="text-gray-700 space-y-5">
 
                            <p name="variante_id"><%= e.variante_id ?? '' %></p>
                  
                            <div>
                                <label for="">Preço</label>
                                <input  type="text" placeholder="preco"  name="preco" mascara="moeda"   class=" px-4 py-2 border w-full" value="<%= e.preco ?? '' %>" >
                            </div>                   
                            <div>
                                <label for="">Tamanho</label>
                                <input type="text" placeholder="tamanho"    class="px-4 py-2 border w-full" name="tamanho" value="<%= e.tamanho ?? '' %>">
                            </div>                
                            <div>
                                <label for="">Quantidade</label>
                                <input type="text" placeholder="quantidade" maxlength="2" class="px-4 py-2 border w-full" name="quantidade" value="<%= e.quantidade ?? '' %>">
                            </div>
                            <div>
                                <label for="">Referência</label>
                                <input type="text" placeholder="referencia" class="px-4 py-2 border w-full" name="referencia" value="<%= e.referencia ?? '' %>">
                            </div>
                            <div>
                                <label for="">Código de Barras</label>
                                <input type="text" placeholder="ean" maxlength="13"    class="px-4 py-2 border w-full" name="ean" value="<%= e.ean ?? '' %>">
                            </div>
                            <div>
                                <label for="">Estoque</label>
                                <input type="text" placeholder="estoque"  maxlength="3"  class="px-4 py-2 border w-full" name="estoque" value="<%= e.estoque ?? '' %>">
                            </div>
                            <div>
                                <label for="">Custo</label>
                                <input type="text" placeholder="custo" mascara="moeda"      class="px-4 py-2 border w-full" name="custo" value="<%= e.custo ?? '' %>">
                            </div>
                        </div>
        
                        <!-- input de imagem  -->
                        <div class="p-10 flex flex-col items-center" >
                            <img onerror="this.src='/assets/produto-default.png'" src="/img/<%= e.imagem ?? '' %>" alt="imagem do produto" class="w-80 aspect-square  m-auto rounded-lg shadow-md object-cover">
                            <div class="m-auto   p-5 flex flex-col items-center">
                                <label for="">Imagem</label><br>
                                <input type="file" placeholder="imagem" class="px-6 py-4 border-2 border-gray-300 border-dashed rounded-lg  bg-white inputImage" name="imagem">
                            </div>
                        </div>  
                    </div>
                    </div>
                <div>

                <script>
                    document.addEventListener("DOMContentLoaded", function() {
                        Variante.imagemInput();
                    });
                </script>
            <% }) %>
        </div>  
    </section>


    <!-- Controle -->
    <section class="fixed bottom-10 right-10 ">
        
        <button class="bg-green-600 hover:bg-green-500 shadow-lg px-4 py-2  flex items-center space-x-2 text-white  col-span-2 " onclick="Variante.adicionar()">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
                <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0"/>
            </svg>
            <p>
                ADICIONAR VARIANTE
            </p>
        </button>

        <button id="btnAtualizar" onclick="Edicao.atualizar('<%= JSON.stringify(produto[0].produto_id) %>')" class="bg-blue-600 hover:bg-blue-500 shadow-lg flex items-center space-x-2  px-4 py-2 text-white   col-span-2 my-5  ml-auto">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-floppy2-fill" viewBox="0 0 16 16">
                <path d="M12 2h-2v3h2z"/>
                <path d="M1.5 0A1.5 1.5 0 0 0 0 1.5v13A1.5 1.5 0 0 0 1.5 16h13a1.5 1.5 0 0 0 1.5-1.5V2.914a1.5 1.5 0 0 0-.44-1.06L14.147.439A1.5 1.5 0 0 0 13.086 0zM4 6a1 1 0 0 1-1-1V1h10v4a1 1 0 0 1-1 1zM3 9h10a1 1 0 0 1 1 1v5H2v-5a1 1 0 0 1 1-1"/>
              </svg>
              <p>
                  ATUALIZAR
              </p>
        </button>
    </section>

</section>

<script src="/js/admin/edicaoProduto.js"></script>
<script src="/js/utilities/mascara.js"></script>

